import 'package:flutter/material.dart';
import 'package:doc_saver/pages/home/list_tile_widget.dart';
import 'package:doc_saver/pages/add_document/add_document.dart';

class HomePages {
  // Build the documents page with context
  static Widget buildDocumentsPage(BuildContext context) {
    return SingleChildScrollView(
      child: Column(
        children: [
          list_tile(context, "exe_icon.png", "android_App"),
          SizedBox(height: 10),
          list_tile(context, "doc_icon.jpg", "Cours IA"),
          SizedBox(height: 10),
          list_tile(context, "pdf_icon.png", "RIB"),
          list_tile(context, "exe_icon.png", "android_App"),
          SizedBox(height: 10),
          list_tile(context, "doc_icon.jpg", "Cours IA"),
          SizedBox(height: 10),
          list_tile(context, "pdf_icon.png", "RIB"),
        ],
      ),
    );
  }

  // Build add document page
  static Widget buildAddDocumentPage() {
    return add_document();
  }

  // Build settings page
  static Widget buildSettingsPage(BuildContext context) {
    return Center(
      child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Icon(Icons.settings, size: 100, color: Colors.grey),
          SizedBox(height: 20),
          Text('Settings Page', style: TextStyle(fontSize: 24)),
        ],
      ),
    );
  }
}